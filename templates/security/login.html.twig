{% extends 'base.html.twig' %}

{% block title 'Authentification' %}

{% block body %}
    <div class="container mt-4">
        {% if error %}
            <div class="alert alert-danger">
                <div class="alert-message">
                    {{ error.messageKey | trans(error.messageData, 'security') }}
                </div>
            </div>
        {% endif %}
        <div class="card">
            <div class="card-header">
                <h3>Bonjour, veuillez-vous identifier</h3>
            </div>
            <form method="post" action="{{ path('login') }}">
            <div class="card-body">
                <div class="form-group mb-3">
                    <label for="username" class="form-label">Nom d'utilisateur</label>
                    <input type="text" name="_username" id="username" class="form-control" value="{{ last_username }}">
                </div>
                <div class="form-group mb-3">
                    <label for="password" class="form-label">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="form-control">
                </div>
            </div>
            <div class="card-footer">
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Se connecter</button>
                </div>
            </div>
            </form>
        </div>
    </div>
{% endblock %}
